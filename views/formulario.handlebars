<main>
  {{!FOrmuLariozinho oni-san}}
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <form action="/cadastrar" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="nome"
            class="form-control"
            placeholder="Nome do Projeto"
          />
          <input
            type="number"
            name="valor"
            class="form-control"
            placeholder="Valor do projeto"
          />
          <select name="status" class="form-select mb-2">
            <option value="" selected disabled>Status do Projeto</option>
            <option value="planejamento">Planejamento</option>
            <option value="em_andamento">Em Andamento</option>
            <option value="concluido">Conclu√≠do</option>
            <option value="suspensa">Suspenso</option>
          </select>
          <input type="file" name="imagem" class="form-control" />
          <input type="submit" value="Cadastrar" class="btn btn-primary mt-3" />
        </form>
      </div>
    </div>
  </div>
  {{!Lista de produtos}}
  <div class="container">
    <div class="row">
      {{#each produtos}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img src="../imagens/{{imagem}}" />
            <div class="textos">
              <p>{{nome}}</p>
              <p>R$ {{valor}}</p>
            </div>
            <a href="#" class="btn btn-warning">Alterar</a>
            <a href="/remover/{{codigo}}&{{imagem}}" class="btn btn-danger">Remover</a>
          </div>
        </div>

      {{/each}}
    </div>
  </div>

</main>